{
  "name": "pixelgram-api",
  "version": "1.0.0",
  "description": "Pixelgram REST API",
  "scripts": {
    "lint": "standard",
    "test": "npm run lint && NODE_ENV=test && ava",
    "pictures": "micro -p 5000 pictures.js",
    "users": "micro -p 5001 users.js",
    "auth": "micro -p 5002 auth.js"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "transform-async-to-generator"
    ]
  },
  "ava": {
    "files": [
      "test/*-test.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelbarron/Pixelgram"
  },
  "keywords": [
    "Pixelgram",
    "API",
    "REST"
  ],
  "author": "Joel Barr√≥n <jbarron_web@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-eslint": "^7.2.3",
    "babel-register": "^6.26.0",
    "standard": "^10.0.3",
    "test-listen": "^1.0.2"
  },
  "dependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-runtime": "^6.9.0",
    "gravatar": "^1.6.0",
    "http-hash": "^2.0.0",
    "jsonwebtoken": "^7.0.1",
    "micro": "^4.1.1",
    "pixelgram-db": "file:../pixelgram-db",
    "request-promise": "3.0.0",
    "token-extractor": "^0.1.6",
    "uuid-base62": "^0.1.0"
  }
}
